<h1 class="lead">Your `Sketch</h1>
<hr>
<% if current_user.events.count == 0 %>
	<%= render "info_calendar"%>
<% end %>
<div id="calendar">
	
</div>
<h1 class="lead">Your Merges</h1>
<% if current_user.merges.count == 0 %>
  <%= render "info_merge"%>
<% end %>
<div id="merges">
  <table class="table table-hover" id="merge_table">
	<tr>
		<th><i class="icon-ok"></i></th><th>Username</th><th>Actions</th>
	</tr>
    <%= render :partial => "merge", :locals => {:merges => @merges}%>
  </table>
  <div id="warning_zone">
  </div>
  <div class="input-append" id="add_user_div">
    <input class="span2" id="username_search" type="text" placeholder="User's Username">
    <button class="btn" id="add_user_button" type="button">Add User</button>
  </div>
</div>
<h1 class="lead">Your Possible Times</h1>
<div id="possible_times">
	<div class="alert fade in" id="times_alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Error!</strong> No merges selected, no possible times exist.
    </div>
</div>
